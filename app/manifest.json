{
  "name": "Stream Manger",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A chrome extension to organize soundcloud's stream",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [{
    "run_at": "document_start",
    "matches": ["https://soundcloud.com/*"],
    "css": ["styles/styles.css"],
    "js": ["scripts/scripts.js"]
  }],
  "web_accessible_resources": [
    "scripts/main.js"
  ],
  "permissions": [
    "*://*.soundcloud.com/*",
    "*://soundcloud.com/*",
    "background",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ]
}
